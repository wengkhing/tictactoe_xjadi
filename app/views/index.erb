<div class="container">

  <% if @message %>
  <h3 style="color: red"><%= @message %></h3>
  <% end %>

  <form class="form-signin" role="form" action="/submit" method="POST">
    <h2 class="form-signin-heading">Enter to play</h2>
    <label for="inputUsername" class="sr-only">Username</label>
    <input type="username" name="username" id="inputUsername" class="form-control" placeholder="Username" required="" autofocus="">
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password"  id="inputPassword" class="form-control" placeholder="Password" required="">
    <div class="checkbox">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <div class="col-md-6 col-xs-6">
      <button class="btn btn-lg btn-primary btn-block" type="submit" name="submit" value="signup">Sign Up</button>
    </div>
    <div class="col-md-6 col-xs-6">
      <button class="btn btn-lg btn-primary btn-block" type="submit" name="submit" value="login">Login</button>
    </div>
  </form>

</div>